{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "dev:rust": "cargo watch -C ../core -i .gitignore -i pkg -s 'wasm-pack build --target web --out-dir ../web/pkg'",
    "dev:next": "next dev --webpack",
    "dev:all": "concurrently \"npm run dev:rust\" \"npm run dev:next\""
  },
  "dependencies": {
    "idb-keyval": "^6.2.2",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
